<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}

<div class="card my-card">
  <div class="card-header row">
      <a class="col title" href="/post/{{post.id}}">{{post.title}}</a>
      <p class="col timestamp"> Created by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
    <div class="content">{{post.content}}</div>
</div>
{{/each}}
