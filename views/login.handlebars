<div class="card my-card">
  <div class="card-header row">
      <div class="title">Login</div>
  </div>
    <div class="content">    
      <form class="form login-form">
        <div class="form-group">
          <div>Username</div>
          <input type="text" class="form-control" id="user-login" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div class="form-group">
          <div for="password-login">Password</div>
          <input type="password" class="form-control" id="password-login" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1">
        </div>
        <div class="form-group d-grid gap-2">
          <button class="btn btn-secondary login-signup-btn" type="submit">Login!</button>
        </div>
        <div>
          <a class="login-signup" href="/signup">Sign up instead</a>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>
